
@model IEnumerable<Homeappliences_application.Models.product>
@{
    ViewBag.Title = "View";
}
<style>
    
    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        padding: 2rem;
    }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }
        .fullwidth{
                 max-width:60%;
                 max-height:50rem;
                 }
        
</style>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<body class="d-flex flex-column min-vh-100"style="background-color:aliceblue" >

            <div style="background-color:cadetblue;display:block;min-width:100%">
               <h1 style="font-size:6rem;font-family:'Times New Roman', Times, serif ;padding-left:2rem;text-align:center;">HomeKart<span style="font-size:3rem;text-align:right;">&nbsp; All in one destination for home appliances</span></h1>
            </div>    
                <div id="myCarousel" class="carousel slide fullwidth" data-ride="carousel" style="margin-left:20%;">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" style="border:5px solid cadetblue;">

                        <div class="item active">
                            <img class="fullwidth" src="https://techprojournal.com/wp-content/uploads/2020/11/LED-tv.jpg" alt="Picture area" style="width:100%;">
                            <div class="carousel-caption">
                                <h3>Stock Clearence sale</h3>
                                <p>Grab exciting offers</p>
                            </div>
                        </div>

                        <div class="item">
                            <img class="fullwidth" src="https://techprojournal.com/wp-content/uploads/2020/11/LED-tv.jpg" alt="Picture area" style="width:100%;">
                            <div class="carousel-caption">
                                <h3>Lowest Prices</h3>
                                <p>Free Home delevery!</p>
                            </div>
                        </div>

                        <div class="item">
                            <img  class="fullwidth"src="https://techprojournal.com/wp-content/uploads/2020/11/LED-tv.jpg" alt="Picture area" style="width:100%;">
                            <div class="carousel-caption">
                                <h3>Buy now pay later</h3>
                                <p>NO cost EMI * conditions apply</p>
                            </div>
                        </div>

                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
           

            @foreach (var item in Model)
            {
                <div class="card " style="width:40%; height: auto; margin:30px 40px; border: 2px solid cadetblue;display:flex;float:left;">

                    <img class="card-img-top" style="height: 100px; width:160px;" src="https://techprojournal.com/wp-content/uploads/2020/11/LED-tv.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title"> @Html.DisplayFor(modelItem => item.product1)</h4>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a style="display: inline" href="#" class="btn btn-warning">Add to Cart</a>
                        <a style="margin-left:3rem" href="#" class="btn btn-success">Buy Now</a>
                    </div>
                </div>
            }

        </body>
